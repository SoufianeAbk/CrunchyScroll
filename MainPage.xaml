<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrunchyScroll.MainPage"
             BackgroundColor="#0a0a0a">

    <ScrollView>
        <VerticalStackLayout Spacing="0" Padding="0">

            <!-- Hero Section -->
            <VerticalStackLayout Padding="20" BackgroundColor="#1a1a1a" Spacing="15">

                <Label Text="Sushi"
                       FontSize="64"
                       HorizontalOptions="Center"
                       FontAttributes="Bold"
                       TextColor="#b8860b"/>

                <Label Text="CrunchyScroll"
                       FontSize="48"
                       FontAttributes="Bold"
                       TextColor="#ffffff"
                       HorizontalOptions="Center"/>

                <Label Text="Premium Sushi Delivery"
                       FontSize="18"
                       TextColor="#b8860b"
                       HorizontalOptions="Center"
                       FontAttributes="Bold"/>

                <Label Text="Verse, authentieke Japanse cuisine direct naar je deur"
                       FontSize="14"
                       TextColor="#cccccc"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"
                       LineBreakMode="WordWrap"
                       Margin="20,0"/>
            </VerticalStackLayout>

            <!-- Featured Banner -->
            <Border StrokeThickness="2"
                    Stroke="#b8860b"
                    Padding="20"
                    Margin="20,10,20,20"
                    BackgroundColor="#0f0f0f">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="15"/>
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                    <Label Text="Speciale Aanbieding"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#b8860b"
                           HorizontalOptions="Center"/>
                    <Label Text="15% korting op je eerste bestelling"
                           FontSize="14"
                           TextColor="#ffffff"
                           HorizontalOptions="Center"/>
                    <Label Text="Gebruik code: SUSHI15"
                           FontSize="12"
                           TextColor="#ffcc00"
                           HorizontalOptions="Center"
                           FontAttributes="Bold"/>
                </VerticalStackLayout>
            </Border>

            <!-- Main Content -->
            <VerticalStackLayout Padding="20" Spacing="25" BackgroundColor="#0a0a0a">

                <!-- Featured Categories Section -->
                <VerticalStackLayout Spacing="15">
                    <Label Text="Onze Specialiteiten"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="#ffffff"/>

                    <!-- Sushi Card -->
                    <Border StrokeThickness="1"
                            Stroke="#333333"
                            BackgroundColor="#1a1a1a"
                            Padding="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12"/>
                        </Border.StrokeShape>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnSushiCategoryTapped"/>
                        </Border.GestureRecognizers>
                        <Grid ColumnDefinitions="100,*" ColumnSpacing="15" Padding="15">
                            <Label Grid.Column="0"
                                   Text="Sushi"
                                   FontSize="48"
                                   FontAttributes="Bold"
                                   TextColor="#b8860b"
                                   VerticalOptions="Center"/>
                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="5">
                                <Label Text="Sushi Rollen"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="#ffffff"/>
                                <Label Text="California, Dragon, Rainbow en meer"
                                       FontSize="13"
                                       TextColor="#cccccc"/>
                                <Label Text="Tik om te verkennen"
                                       FontSize="12"
                                       TextColor="#b8860b"
                                       FontAttributes="Bold"/>
                            </VerticalStackLayout>
                        </Grid>
                    </Border>

                    <!-- Ramen Card -->
                    <Border StrokeThickness="1"
                            Stroke="#333333"
                            BackgroundColor="#1a1a1a"
                            Padding="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12"/>
                        </Border.StrokeShape>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnRamenCategoryTapped"/>
                        </Border.GestureRecognizers>
                        <Grid ColumnDefinitions="100,*" ColumnSpacing="15" Padding="15">
                            <Label Grid.Column="0"
                                   Text="Noodles"
                                   FontSize="48"
                                   FontAttributes="Bold"
                                   TextColor="#b8860b"
                                   VerticalOptions="Center"/>
                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="5">
                                <Label Text="Ramen en Noodles"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="#ffffff"/>
                                <Label Text="Warme, hartige Japanse noedelsoepen"
                                       FontSize="13"
                                       TextColor="#cccccc"/>
                                <Label Text="Tik om te verkennen"
                                       FontSize="12"
                                       TextColor="#b8860b"
                                       FontAttributes="Bold"/>
                            </VerticalStackLayout>
                        </Grid>
                    </Border>

                    <!-- Appetizers Card -->
                    <Border StrokeThickness="1"
                            Stroke="#333333"
                            BackgroundColor="#1a1a1a"
                            Padding="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12"/>
                        </Border.StrokeShape>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAppetisersCategoryTapped"/>
                        </Border.GestureRecognizers>
                        <Grid ColumnDefinitions="100,*" ColumnSpacing="15" Padding="15">
                            <Label Grid.Column="0"
                                   Text="Bites"
                                   FontSize="48"
                                   FontAttributes="Bold"
                                   TextColor="#b8860b"
                                   VerticalOptions="Center"/>
                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="5">
                                <Label Text="Voorgerechten"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="#ffffff"/>
                                <Label Text="Gyoza, Takoyaki, Tempura en meer"
                                       FontSize="13"
                                       TextColor="#cccccc"/>
                                <Label Text="Tik om te verkennen"
                                       FontSize="12"
                                       TextColor="#b8860b"
                                       FontAttributes="Bold"/>
                            </VerticalStackLayout>
                        </Grid>
                    </Border>
                </VerticalStackLayout>

                <!-- About Section -->
                <VerticalStackLayout Spacing="10">
                    <Label Text="Over CrunchyScroll"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="#ffffff"/>

                    <VerticalStackLayout Spacing="8">
                        <Grid ColumnDefinitions="80,*" ColumnSpacing="10">
                            <Label Grid.Column="0"
                                   Text="30-45 min"
                                   FontSize="14"
                                   TextColor="#b8860b"
                                   FontAttributes="Bold"/>
                            <Label Grid.Column="1"
                                   Text="Snelle bezorging"
                                   FontSize="14"
                                   TextColor="#cccccc"
                                   VerticalOptions="Center"/>
                        </Grid>

                        <Grid ColumnDefinitions="80,*" ColumnSpacing="10">
                            <Label Grid.Column="0"
                                   Text="Premium"
                                   FontSize="14"
                                   TextColor="#b8860b"
                                   FontAttributes="Bold"/>
                            <Label Grid.Column="1"
                                   Text="Verse ingredienten"
                                   FontSize="14"
                                   TextColor="#cccccc"
                                   VerticalOptions="Center"/>
                        </Grid>

                        <Grid ColumnDefinitions="80,*" ColumnSpacing="10">
                            <Label Grid.Column="0"
                                   Text="Chefs"
                                   FontSize="14"
                                   TextColor="#b8860b"
                                   FontAttributes="Bold"/>
                            <Label Grid.Column="1"
                                   Text="Ervaren Japanse culinaire kunsten"
                                   FontSize="14"
                                   TextColor="#cccccc"
                                   VerticalOptions="Center"/>
                        </Grid>

                        <Grid ColumnDefinitions="80,*" ColumnSpacing="10">
                            <Label Grid.Column="0"
                                   Text="Bereik"
                                   FontSize="14"
                                   TextColor="#b8860b"
                                   FontAttributes="Bold"/>
                            <Label Grid.Column="1"
                                   Text="Bezorging in heel de stad"
                                   FontSize="14"
                                   TextColor="#cccccc"
                                   VerticalOptions="Center"/>
                        </Grid>
                    </VerticalStackLayout>

                <!-- CTA Button -->
                <Button Text="Start je Bestelling"
                        FontSize="18"
                        FontAttributes="Bold"
                        Padding="20,15"
                        Margin="0,20,0,10"
                        BackgroundColor="#b8860b"
                        TextColor="#000000"
                        Clicked="OnStartOrderingTapped"
                        CornerRadius="12"/>

                <!-- Bottom Info -->
                <Border StrokeThickness="1"
                        Stroke="#333333"
                        Padding="15"
                        BackgroundColor="#1a1a1a">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                        <Label Text="Vragen"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#ffffff"
                               HorizontalOptions="Center"/>
                        <Label Text="info@crunchyscroll.nl"
                               FontSize="12"
                               TextColor="#cccccc"
                               HorizontalOptions="Center"/>
                        <Label Text="+31 20 123 4567"
                               FontSize="12"
                               TextColor="#cccccc"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
