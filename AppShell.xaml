<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CrunchyScroll.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CrunchyScroll"
    xmlns:views="clr-namespace:CrunchyScroll.Views"
    Title="CrunchyScroll">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="Producten"
            ContentTemplate="{DataTemplate views:ProductsPage}"
            Route="ProductsPage" />

        <ShellContent
            Title="Winkelwagen"
            ContentTemplate="{DataTemplate views:OrderPage}"
            Route="OrderPage" />

        <ShellContent
            Title="Geschiedenis"
            Icon="history.png"
            ContentTemplate="{DataTemplate views:OrderHistoryPage}"
            Route="OrderHistoryPage" />
    </TabBar>

</Shell>
